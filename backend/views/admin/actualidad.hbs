<div class="container" style="margin-top: 50px;">
    <div class="row">
        <p class="text-end">Hola {{logueado}}, bienvenido!
            <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesión<i class="fas fa-sign-out-alt"></i></a>
        </p>
    </div>

    <div class="row">
        <div class="col-7">
            <h3>Novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/actualidad/new"><i class="fa fa-plus" aria-hidden="true"></i> Crear
                nueva</a>
        </div>
    </div>

    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Título</th>
                    <th scope="col">Equipo</th>
                    <th scope="col">Imagen</th>
                    <th scope="col" class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each novedades}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{titulo}}</td>
                    <td>{{equipo}}</td>
                    <td>{{{imagen}}}</td>
                    <td class="text-end">
                        <a class="btn btn-secondary" href="/admin/actualidad/edit/{{id}}"><i class="fa fa-pencil"
                                aria-hidden="true"></i></a>
                        <a class="btn btn-secondary" href="/admin/actualidad/delete/{{id}}"><i class="fa fa-trash"
                                aria-hidden="true"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>